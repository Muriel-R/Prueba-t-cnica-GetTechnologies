<Window x:Class="GetechnologiesTest.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directorio / Ventas" Height="520" Width="560"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TabControl>
            <!-- TAB 1: Registro de Persona -->
            <TabItem Header="Personas">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Registro de Personas" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Nombre"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ErrorNombre}" Foreground="Red" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="Apellido Paterno"/>
                        <TextBox Text="{Binding ApellidoPaterno, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ErrorApellidoPaterno}" Foreground="Red" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,0,0,10">
                        <TextBlock Text="Apellido Materno (opcional)"/>
                        <TextBox Text="{Binding ApellidoMaterno, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Row="4" Margin="0,0,0,10">
                        <TextBlock Text="Identificación"/>
                        <TextBox Text="{Binding Identificacion, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ErrorIdentificacion}" Foreground="Red" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5">
                        <Button Content="Registrar Persona"
                                Height="40"
                                Command="{Binding RegistrarCommand}"
                                IsEnabled="{Binding PuedeRegistrar}"
                                Margin="0,10,0,10"/>

                        <TextBlock Text="{Binding Status}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: Registro de Factura -->
            <TabItem Header="Facturas">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Registro de Facturas" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="PersonaId"/>
                        <TextBox Text="{Binding FacturaPersonaId, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ErrorFacturaPersonaId}" Foreground="Red" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="Monto"/>
                        <TextBox Text="{Binding FacturaMonto, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ErrorFacturaMonto}" Foreground="Red" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="0,0,0,10">
                        <TextBlock Text="Fecha (opcional)"/>
                        <DatePicker SelectedDate="{Binding FacturaFecha}" />
                        <TextBlock Text="(Si no seleccionas fecha, se usa la actual)" FontSize="12" Opacity="0.7"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4">
                        <Button Content="Registrar Factura"
                                Height="40"
                                Command="{Binding RegistrarFacturaCommand}"
                                IsEnabled="{Binding PuedeRegistrarFactura}"
                                Margin="0,10,0,10"/>

                        <TextBlock Text="{Binding StatusFactura}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
